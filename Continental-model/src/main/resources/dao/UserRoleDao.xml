<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
	xmlns="http://www.ontimize.com/schema/jdbc"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
	catalog="" schema="${mainschema}" table="tuser_role"
	datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
	<DeleteKeys>
		<Column>id_user_role</Column>
	</DeleteKeys>
	<UpdateKeys>
		<Column>id_user_role</Column>
	</UpdateKeys>
	<Queries>
		<Query id="login">
			<Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM ${mainschema}.tuser
                    #WHERE#
                    #ORDER#
                ]]>
            </Sentence>
		</Query>
		<Query id="userRole">
			<AmbiguousColumns>
				<AmbiguousColumn name="user_" prefix="tu" />
				<AmbiguousColumn name="id_rolename" prefix="tr" />
			</AmbiguousColumns>
			<Sentence>
					<![CDATA[
					select
                    #COLUMNS#
                    from
                       ${mainschema}.tuser tu
                       JOIN ${mainschema}.TUSER_ROLE tur ON tu.user_ = tur.user_
                       JOIN ${mainschema}.TROLE tr ON tur.id_rolename  = tr.id_rolename
                    where
                       tu.userblocked IS NULL OR tu.userblocked > current_timestamp
                    #WHERE_CONCAT#
                    #ORDER#
					]]>
			</Sentence>
		</Query>
		<Query id="serverPermissions">
			<AmbiguousColumns>
				<AmbiguousColumn name="id_rolename" prefix="tr" />
				<AmbiguousColumn name="id_server_permission" prefix="tsp" />
			</AmbiguousColumns>
			<Sentence>
					<![CDATA[
					select
						#COLUMNS#
					from
						${mainschema}.TROLE tr
						JOIN ${mainschema}.TROLE_SERVER_PERMISSION trsp ON tr.ID_ROLENAME = trsp.ID_ROLENAME
						JOIN ${mainschema}.TSERVER_PERMISSION tsp ON trsp.ID_SERVER_PERMISSION = tsp.ID_SERVER_PERMISSION
					#WHERE#
					#ORDER#
					]]>
		</Sentence>
		</Query>
		<Query id="clientPermissions">
			<Sentence>
					<![CDATA[
					select
						#COLUMNS#
					from
						${mainschema}.TROLE tr
					#WHERE#
					#ORDER#
					]]>
		</Sentence>
		</Query>
	</Queries>
</JdbcEntitySetup>